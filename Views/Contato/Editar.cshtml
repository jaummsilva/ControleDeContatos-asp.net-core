@model Contato
@{
    ViewData["Title"] = "Editar contato";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4"> Editar contato</h1>
    <br/>
</div>
<br/>

<form  asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome" >
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="celular" class="form-label">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite seu celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
    <a role="button" class="btn btn-secondary " asp-controller="Contato" asp-action="Index">Voltar</a>
</form>
