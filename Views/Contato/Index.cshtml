@model List<Contato>
@{
    ViewData["Title"] = "Listagem de Contatos";
    Layout = "_Layout";

}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="Contato" asp-action="Criar"  role="button"> Adicionar novo contato</a>
    </div> <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm btn-close" arial-label="Close"></button>
            @TempData["MensagemSucesso"]
        </div>  
    }
    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm btn-close" arial-label="Close"></button>
            @TempData["MensagemErro"]
        </div>  
    } <br />

    <h1 class="display-4"> Listagem de Contatos</h1> <br /><br />

    <table class="table" id="table-contatos">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="text-start">
            @if(Model != null  && Model.Any())
            {
                foreach (var contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar" class="btn btn-primary">Editar</a>
                                <a role="button" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="DeletarConfirmacao" class="btn btn-danger">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5"> Nenhum contato encontrado</td>  </tr>
            }
        </tbody>
    </table>

</div>
